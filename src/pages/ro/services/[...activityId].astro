---
import activitiesData from "../../../data/serviceTypes.json";
import ActivityDetailPage from "../../../shared/ActivityDetailPage.astro";
import type { Activity } from "../../../types/activity";

export async function getStaticPaths() {
  const activities = activitiesData as Activity[];
  const res = activities.map(({ id, nameKey }) => ({
    params: { activityId: id },
    props: { activityNameKey: nameKey },
  }));
  return res;
}

const { activityId } = Astro.params;
const { activityNameKey } = Astro.props;
---

<ActivityDetailPage
  lang="ro"
  activityId={activityId}
  activityNameKey={activityNameKey}
/>
