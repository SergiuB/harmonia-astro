---
import type { Locale } from "../config/i18n";

interface Props {
  currentLang: Locale;
}

const { currentLang } = Astro.props;
const currentPath = Astro.url.pathname;
const basePath = currentPath.replace(/^\/(ro|en)/, "") || "/";
const otherLang = currentLang === "ro" ? "en" : "ro";
const targetUrl = `/${otherLang}${basePath}`;
---

<a
  href={targetUrl}
  class="px-4 py-1 text-primary rounded-md text-xs hover:bg-pink-600 transition-colors border-primary border-2"
>
  {currentLang === "en" ? "EN" : "RO"}
</a>
