---
import { getCollection } from "astro:content";
import TruncatedDescription from "../components/TruncatedDescription.astro";
import { Image } from "astro:assets";

interface Props {
  displayCount?: number;
}
export const DarkBlue = "#224884";
export const LightBlue = "#0FCBFF";
export const Teal = "#00C3CD";
export const Pink = "#FF969F";

const { displayCount } = Astro.props;

const facilitators = (await getCollection("facilitators")).slice(
  0,
  displayCount,
);
---

<>
  {
    facilitators.map((facilitator, idx) => (
      <a
        data-aos={idx % 2 ? "fade-up" : "fade-down"}
        class:list={[
          "css-animation facilitator-card flex flex-row justify-center gap-4 inlibe-block float-left",
          { "from-right": idx % 2 },
        ]}
        transition:name={`facilitator-${idx}`}
        transition:animate="slide"
        href={`/facilitators/${facilitator.slug}`}
      >
        <Image
          src={facilitator.data.image}
          alt={facilitator.data.name}
          class="rounded-3xl"
          width={150}
          height={150}
        />

        <div class="flex flex-col  gap-4 py-2">
          <h2 class="text-xl">{facilitator.data.name}</h2>
          <div class="flex flex-col gap-1">
            {facilitator.data.tags.map((tag) => (
              <p
                transition:name={`facilitators-tag-${tag}`}
                class="bg-secondary-teal rounded-xl  text-xs font-semibold text-red  text-center p-2 uppercase"
              >
                {tag}
              </p>
            ))}
          </div>
        </div>
      </a>
    ))
  }
</>
