---

<>
  {
    facilitators.map((facilitator, idx) => (
      <div
        class:list={[
          "animate__animated animate__faster facilitator-card flex flex-row items-center justify-center gap-4",
          { "from-right": idx % 2 },
        ]}
      >
        <Image
          src={facilitator.data.image}
          alt={facilitator.data.name}
          class="rounded-3xl"
          width={150}
          height={150}
        />
        <div class="flex flex-col gap-2 py-2">
          <h2 class="text-xl">{facilitator.data.name}</h2>
          <TruncatedDescription text={facilitator.data.description} />
        </div>
      </div>
    ))
  }
</>

<script>
  const facilitatorObserver = new IntersectionObserver((entries) => {
    entries &&
      entries.forEach((entry) => {
        const fadeClass = entry.target.classList.contains("from-right")
          ? "animate__fadeInUp"
          : "animate__fadeInUp";
        if (entry.isIntersecting) {
          entry.target.classList.add(fadeClass);
        }
      });
  }, {});
  document.querySelectorAll(".facilitator-card").forEach((el) => {
    facilitatorObserver.observe(el);
  });
</script>
