---
import TruncatedDescription from "../components/TruncatedDescription.astro";
import { Image } from "astro:assets";
const facilitators = [
  {
    name: "Tiberiu Bozi",
    description:
      "După ani în care a experimentat pe propria piele diverse metode în procesul lui de vindecare, a studiat cu ardoare și a acumulat experiență în domeniul masajului holistic, al terapiilor energetice și al terapiilor complementare. Acesta este unul dintre facilitatorii care își dedică întreaga atenție și energie pentru a crea un spațiu sigur și plin de iubire, unde fiecare persoană se simte încurajată să își descopere și să își împărtășească adevărata strălucire.",
    image: "/src/assets/facilitators/facilitator1.png",
  },
  {
    name: "Tiberiu Bozi",
    description:
      "După ani în care a experimentat pe propria piele diverse metode în procesul lui de vindecare, a studiat cu ardoare și a acumulat experiență în domeniul masajului holistic, al terapiilor energetice și al terapiilor complementare. Acesta este unul dintre facilitatorii care își dedică întreaga atenție și energie pentru a crea un spațiu sigur și plin de iubire, unde fiecare persoană se simte încurajată să își descopere și să își împărtășească adevărata strălucire.",
    image: "/src/assets/facilitators/facilitator2.png",
  },
];

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/facilitators/*.{jpeg,jpg,png,gif}",
);
---

<>
  {
    facilitators.map((facilitator, idx) => (
      <div class:list={["flex flex-row items-center justify-center gap-4"]}>
        <Image
          src={images[facilitator.image]()}
          alt={facilitator.name}
          class="rounded-3xl"
          width={150}
          height={150}
        />
        <div class="flex flex-col gap-2 py-2">
          <h2 class="text-xl">{facilitator.name}</h2>
          <TruncatedDescription text={facilitator.description} />
        </div>
      </div>
    ))
  }
</>
