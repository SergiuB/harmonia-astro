---
import { ClientRouter } from "astro:transitions";
import "aos/dist/aos.css"; // You can also use <link> for styles
import "@fontsource/jost";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import type { Locale } from "../config/i18n";

interface Props {
  title: string;
  lang?: Locale;
}

const { title, lang = "ro" } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>
  <body class="bg-light text-primary w-screen">
    <Navigation lang={lang} />
    <div class="relative h-full">
      <slot />
    </div>
    <Footer lang={lang} />
    <script>
      import { aosInit } from "../scripts/aos";

      // on IOS Chrome CSS animations are not working so we use this class to disable them
      if (navigator.userAgent.match("CriOS")) {
        document.body.classList.add("ios-chrome");
      }
      // runs on initial page load
      aosInit(!!navigator.userAgent.match("CriOS"));

      // runs on view transitions navigation
      document.addEventListener("astro:after-swap", () =>
        aosInit(!!navigator.userAgent.match("CriOS")),
      );
    </script>
  </body>
</html>
